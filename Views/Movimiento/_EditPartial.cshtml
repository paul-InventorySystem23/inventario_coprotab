@model inventario_coprotab.ViewModels.MovimientoEditViewModel



<form method="post" id="formMovimientoEdit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdMovimiento" />
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="IdDispositivo" class="form-label fw-bold">
                <i class="bi bi-bookmark"></i> Dispositivo
            </label>
            <div class="input-group">
                <select asp-for="IdDispositivo" class="form-select" asp-items="ViewBag.IdDispositivo"></select>
            </div>
            <span asp-validation-for="IdDispositivo" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TipoMovimiento" class="form-label fw-bold">
                <i class="bi bi-circle-fill"></i> TipoMovimiento
            </label>
            <select asp-for="TipoMovimiento" class="form-select" asp-items="@(new SelectList(ViewBag.TipoDisponibles, Model.TipoMovimiento))">
                <option value="">-- Seleccionar Estado --</option>
            </select>
            <span asp-validation-for="TipoMovimiento" class="text-danger small"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Cantidad" class="form-label fw-bold">
                <i class="bi bi-box-seam"></i> Cantidad
            </label>
            <input asp-for="Cantidad" class="form-control" type="number" min="1" value="1" />
            <span asp-validation-for="Cantidad" class="text-danger small"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="IdUbicacion" class="form-label fw-bold">
                <i class="bi bi-bookmark"></i> Ubicacion
            </label>
            <div class="input-group">
                <select asp-for="IdUbicacion" class="form-select" asp-items="ViewBag.IdUbicacion"></select>
            </div>
            <span asp-validation-for="IdUbicacion" class="text-danger small"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="IdResponsable" class="form-label fw-bold">
                <i class="bi bi-bookmark"></i> Responsable
            </label>
            <div class="input-group">
                <select asp-for="IdResponsable" class="form-select" asp-items="ViewBag.IdResponsable"></select>
            </div>
            <span asp-validation-for="IdResponsable" class="text-danger small"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Fecha" class="form-label fw-bold">
                <i class="bi bi-calendar"></i> Fecha
            </label>
            <input asp-for="Fecha" class="form-control" type="date" />
            <span asp-validation-for="Fecha" class="text-danger small"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones" class="form-label fw-bold">
            <i class="bi bi-card-text"></i> Observaciones
        </label>
        <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Descripción detallada del componente..."></textarea>
        <span asp-validation-for="Observaciones" class="text-danger small"></span>
    </div>
    
    <div class="modal-footer border-0 pt-4">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Cancelar
        </button>
        <button type="submit" class="btn btn-success-custom">
            <i class="bi bi-save"></i> Guardar Cambios
        </button>
    </div>
</form>

    


<script>
    $(function () {
        var form = $('#formMovimientoEdit');
        if (form.length) {
            $.validator.unobtrusive.parse(form);
        }
    });

    $(document).on('submit', '#formMovimientoEdit', function(e) {
        e.preventDefault();
        var form = $(this);
        $.ajax({
            url: form.attr('action'),
            type: 'POST',
            data: form.serialize(),
            success: function(response) {
                if (response.success) {
                    $('#modalMovimiento').modal('hide');
                    location.reload();
                } else {
                    $('#modalMovimientoContenido').html(response);
                }
            },
            error: function() {
                alert('Error al procesar la solicitud');
            }
        });
    });
</script>